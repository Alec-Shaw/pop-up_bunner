<script>
	window.addEventListener( "scroll" , function() {

 let banner =	document.querySelector(".element-animation").classList.toggle("show", this.pageYOffset > 4000);
 
 
 if (banner || false) {
     document.querySelector(".element-animation").classList.toggle("unshow", this.pageYOffset > 6000);
 } 

})

</script>

